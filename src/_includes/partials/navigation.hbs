            <li role="none" class="navigation-item {{#eq active "preis"}}active{{/eq}}">
              <a href="/preis" role="menuitem" class="font-header font-semibold text-xl md:text-lg">
                Preis
              </a>
            </li>
            <li role="none" class="navigation-item {{#eq active "demo"}}active{{/eq}}">
              <a href="/demo" role="menuitem" class="font-header font-semibold text-xl md:text-lg">
