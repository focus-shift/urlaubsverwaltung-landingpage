# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.js]
indent_style = tab
tab_width = 2
indent_size = 2

[*.hbs]
indent_style = tab
tab_width = 2
indent_size = 2

[{package.json,package-lock.json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
