{
	"private": true,
	"author": "Benjamin Seber <seber@synyx.de> (https://www.synyx.de)",
	"scripts": {
		"build": "make build",
		"build-markup": "make markup",
		"build-js": "make js",
		"build-style": "make style",
		"build-static": "make static",
		"predev": "make clean",
		"dev": "NODE_ENV=development concurrently \"npm:serve\" \"npm:watch-markup\" \"npm:watch-js\" \"npm:watch-style\" \"npm:watch-static\"",
		"watch-markup": "onchange -i src/**/*.hbs -- npm run build-markup",
		"watch-js": "onchange -i src/javascript/**/*.js -- npm run build-js",
		"watch-style": "onchange -i src/css/**/*.css -- npm run build-style",
		"watch-static": "onchange -i src/static/** -- npm run build-static",
		"serve": "http-server -c-1 out"
	},
	"dependencies": {
		"autoprefixer": "10.0.4",
		"concurrently": "5.3.0",
		"cssnano": "4.1.10",
		"eslint": "7.14.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-prettier": "3.1.4",
		"fs-extra": "9.0.1",
		"handlebars": "4.7.6",
		"html-minifier": "4.0.0",
		"http-server": "0.12.3",
		"husky": "4.3.0",
		"lint-staged": "10.5.2",
		"onchange": "7.1.0",
		"postcss": "8.1.10",
		"postcss-cli": "8.3.0",
		"prettier": "2.2.0",
		"tailwindcss": "2.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		]
	}
}
